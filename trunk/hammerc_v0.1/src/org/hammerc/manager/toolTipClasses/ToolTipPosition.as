package org.hammerc.manager.toolTipClasses
{
	/**
	 * <code>ToolTipPosition</code> 类枚举了所有工具提示弹出位置的常量.
	 * @author wizardc
	 */
	public class ToolTipPosition
	{
		/**
		 * 在组件上方弹出.
		 */
		public static const ABOVE:String = "above";
		
		/**
		 * 在组件下方弹出.
		 */
		public static const BELOW:String = "below";
		
		/**
		 * 在组件左方弹出.
		 */
		public static const LEFT:String = "left";
		
		/**
		 * 在组件右方弹出.
		 */
		public static const RIGHT:String = "right";
		
		/**
		 * 弹出并跟随鼠标.
		 */
		public static const FOLLOW_MOUSE:String = "followMouse";
	}
}
