package org.hammerc.controls.buttonClasses
{
	/**
	 * <code>ButtonState</code> 类枚举了按钮的所有状态.
	 * @author wizardc
	 */
	public class ButtonState
	{
		/**
		 * 按钮弹起状态.
		 */
		public static const BUTTON_UP:int = 0;
		
		/**
		 * 按钮划入状态.
		 */
		public static const BUTTON_OVER:int = 1;
		
		/**
		 * 按钮按下状态.
		 */
		public static const BUTTON_DOWN:int = 2;
		
		/**
		 * 按钮不可用状态.
		 */
		public static const BUTTON_DISABLED:int = 3;
		
		/**
		 * 按钮选中弹起状态.
		 */
		public static const BUTTON_SELECTED_UP:int = 4;
		
		/**
		 * 按钮选中划入状态.
		 */
		public static const BUTTON_SELECTED_OVER:int = 5;
		
		/**
		 * 按钮选中按下状态.
		 */
		public static const BUTTON_SELECTED_DOWN:int = 6;
		
		/**
		 * 按钮选中不可用状态.
		 */
		public static const BUTTON_SELECTED_DISABLED:int = 7;
	}
}
